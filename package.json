{
  "name": "graphql",
  "private": true,
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "dev": "tsc-watch --onSuccess 'node ./dist/index.js'",
    "test": "jest",
    "gql-gen": "graphql-codegen --config codegen.yml",
    "schema": "ts-node --require tsconfig-paths/register src/utils/schema/exporter.ts",
    "schema:check": "yarn ts-node --require tsconfig-paths/register src/utils/schema/checker.ts",
    "prettier": "prettier --write ."
  },
  "dependencies": {
    "apollo-server": "^3.0.0-alpha.3",
    "config": "^3.3.3",
    "graphql": "^15.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.20.1",
    "@graphql-codegen/typescript": "1.20.2",
    "@graphql-codegen/typescript-resolvers": "1.18.1",
    "@types/jest": "^26.0.20",
    "apollo-server-testing": "^3.0.0-alpha.3",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.0",
    "ts-node": "^9",
    "tsc-watch": "^4.2.9",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@server": "<rootDir>/src/server.ts"
    }
  }
}
